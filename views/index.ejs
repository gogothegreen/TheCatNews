<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TheCatNews</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="css/style.css">
    
    <style>
        .header-image {
            width: 100%;
            height: auto;
            display: block;
            position: relative;
        }

        .title-overlay {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            font-size: 10rem; /* Ensuring large font size */
            font-weight: bold;
            color: silver; /* Metallic color */
            text-shadow: 2px 2px 10px rgba(0, 0, 0, 0.5);
        }

        body, html {
            height: 100%;
            margin: 0;
            padding: 0;
        }

        .image-container {
            position: relative;
            width: 100%;
        }

        .section {
            display: flex;
            margin: 3rem 0;
        }

        .section:nth-child(even) {
            flex-direction: row-reverse;
        }

        .section img {
            width: 30%;
            object-fit: cover;
        }

        .section .text-content {
            width: 65%;
            padding: 0 1.5rem;
        }

        a {
            text-decoration: none;
            color: blue;
        }

        a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>

    <div class="container">
        <header class="image-container">
            <% if (imageUrl) { %>
                <img src="<%= imageUrl %>" class="header-image" alt="The Cat News Feature Image">
            <% } else { %>
                <p>No image available.</p>
            <% } %>
            <div class="title-overlay">
                <h1>TheCatNews</h1>
            </div>
        </header>

        <main class="my-4">
            <% sections.forEach(function(section, index) { %>
                <div class="section">
                    <% if (section.imagePath) { %>
                        <img src="<%= section.imagePath %>" alt="<%= section.heading %> Image">
                    <% } else { %>
                        <p>No image available for <%= section.heading %>.</p>
                    <% } %>
                    <div class="text-content">
                        <h2><%= section.heading %></h2>
                        <div><%- section.text %></div>
                    </div>
                </div>
            <% }); %>
        </main>

        <footer class="my-4">
            <p>&copy; 2024 TheCatNews. All rights reserved.</p>
        </footer>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
